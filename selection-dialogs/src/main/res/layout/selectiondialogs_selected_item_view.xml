<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/selectiondialogs_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:textColor="@color/selectiondialogs_textHintDisabled"
        android:text="@string/selectiondialogs_default_hint" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/selectiondialogs_button_ll"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/selectiondialogs_icon_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:tint="@color/selectiondialogs_default_item_color"
                android:src="@drawable/selectiondialogs_default_item_icon" />

            <TextView
                android:id="@+id/selectiondialogs_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp"
                android:layout_centerVertical="true"
                android:textColor="@color/selectiondialogs_textPrimary"
                android:text="@string/selectiondialogs_default_item_name" />

        </RelativeLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>